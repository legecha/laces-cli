    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Laces\\": "src/"
        }
    },
    "authors": [
        {
            "name": "legecha",
            "email": "code@legecha.com"
        }
    ],
    "minimum-stability": "stable",
